<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MensagensProntas">

    <TextView
        android:id="@+id/written_messages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/msg"
        android:textSize="23sp"
        app:layout_constraintBottom_toTopOf="@+id/written_message1"
        app:layout_constraintTop_toTopOf="parent"
        android:textAlignment="center"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/written_message1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5sp"
        android:background="@drawable/text"
        android:text="@string/msg1"
        android:backgroundTint="@color/pink"
        android:textSize="25sp"
        app:layout_constraintTop_toBottomOf="@id/written_messages"
        tools:layout_editor_absoluteX="5dp" />



    <TextView
        android:id="@+id/chosen_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5sp"
        android:text=""
        android:textSize="25sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="-7dp"
        tools:layout_editor_absoluteY="361dp"
        app:layout_constraintTop_toBottomOf="@id/written_message1"/>


